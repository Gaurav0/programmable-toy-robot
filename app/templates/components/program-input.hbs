<textarea class="program-input"
  {{on "input" (set this.program (get _ "target.value"))}}
  {{did-insert this.didInsertTextarea}}
>
  {{this.program}}
</textarea>
<p></p>
<input
  type="submit"
  class="run-program"
  value="Run Program"
  {{on "click" (fn this.args.runProgram this.program)}}
>
<p></p>